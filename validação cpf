usuarios = []  # lista para armazenar os dados dos usuários
    cpfs_cadastrados = set()  # conjunto para armazenar os CPFs já cadastrados

    while True:
       nome=input("Digite seu nome (ou digite 'sair' para encerrar):")
       break
       if nome == "sair":
            break                                                                                
    #while not cpf.isdigit() or len(cpf) != 11:
    while True:                                              #!= diferente #isdigit() serve para verificar se é só número.
       cpf=input('Insira o cpf: ')
       if cpf.isdigit() and len(cpf) == 11:
            break
       else:
            print('Insira o cpf com o 11 Digitos')
            if cpf in cpfs_cadastrados:  # verifica se o CPF já está cadastrado
                print("CPF já cadastrado. Tente novamente.")

    while True:                                              #!= diferente #isdigit() serve para verificar se é só número.
        telefone=input('Insira o telefone: ')
        if telefone.isdigit() and len(telefone) == 11:
            break  
        else:
            print('Insira o telefone com o 11 Digitos')
    # se o CPF não estiver cadastrado e possuir 11 dígitos, adiciona o usuário à lista e ao conjunto
    usuarios.append({"nome": nome, "cpf": cpf, 'telefone': telefone})
    cpfs_cadastrados.add(cpf)

    print("Usuários cadastrados:")
    for usuario in usuarios:
        print(f"Nome: {usuario['nome']}, CPF: {usuario['cpf']}, Telefone: {usuario['telefone']}")
    with open("database.csv", "a") as arquivo:          #a = attach      #colocar código de conflito de cpf
        escritor = csv.writer(arquivo)
        escritor.writerow([nome, cpf, telefone])
        print("Cliente cadastrado com sucesso!")
        return voltar_menu() 
